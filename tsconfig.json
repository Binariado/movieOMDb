{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["app/*"],
      "tests": ["__tests__/*"],
      "@screens/*": ["app/screens/*"],
      "@components/*": ["app/components/*"],
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}